   "source": [
    "def LineFit(x, y):\n",
    "    ''' Returns slope and y-intercept of linear fit to (x,y)\n",
    "    data set'''\n",
    "    xavg = x.mean()\n",
    "    slope = (y*(x-xavg)).sum()/(x*(x-xavg)).sum()\n",
    "    yint = y.mean()-slope*xavg\n",
    "    return slope, yint"
   ]
